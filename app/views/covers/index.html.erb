<%= render 'layouts/header' %>
<% if !flash[:notice].blank? %>
  <div class="alert alert-info">
  <%= flash[:notice] %>
  </div>
<% end %>
<br />
<%= link_to "New Cover", new_cover_path, class: "btn btn-primary" %>
<br />
<br />
<table class="table table-bordered table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Download Link</th>
      <th>&nbsp;</th>
    </tr>
  </thead>
  <tbody>
    <% @covers.each do |cover| %>
      <tr>
        <td><%= cover.name %></td>
        <td><%= link_to "Download Resume", cover.attachment_url %></td>
        <td><%= button_to "Delete",  cover, method: :delete, class: "btn btn-danger", confirm: "Are you sure that you wish to delete #{cover.name}?" %></td>
      </tr>
    <% end %>
  </tbody>
</table>